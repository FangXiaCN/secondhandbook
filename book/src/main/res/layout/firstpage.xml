<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firstpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="二手书城"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/a" />

            <TableLayout
                android:id="@+id/layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_bg">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Philosophy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Philosophy"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/Economics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economics"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/Law"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Law"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/Education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textSize="5dp" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Natural_Science"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Natural_Science"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/Engineering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engineering"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/Military_Science"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Military_Science"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="history"
                        android:textSize="5dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/Literature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Literature"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="medicine"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/Management_Science"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Management_Science"
                        android:textSize="5dp" />

                    <Button
                        android:id="@+id/art"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="art"
                        android:textSize="5dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/agronomy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="agronomy"
                        android:textSize="5dp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/layout_mywork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_button"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="畅销精选"
                    android:textColor="#000000"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_work1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_mywork"
                android:background="#C785C8"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#FBCFD0"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#FBCFD0" />

                <ImageView
                    android:id="@+id/work1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#FBCFD0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_work2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/layout_work1"
                android:layout_marginTop="10px"
                android:background="#60C5F1"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#C8EFD4"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#C8EFD4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="#C8EFD4" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
